# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DATA_PATH=./data

# AI Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
LOCAL_LLM_URL=http://127.0.0.1:1234

# AI Model Configuration
OPENAI_MODEL=gpt-4
ANTHROPIC_MODEL=claude-3-sonnet-20240229
GOOGLE_MODEL=gemini-pro
LOCAL_LLM_MODEL=deepseek-coder-v2-lite-instruct

# AI Parameters
OPENAI_MAX_TOKENS=4000
ANTHROPIC_MAX_TOKENS=4000
GOOGLE_MAX_TOKENS=4000
TEMPERATURE=0.7
TOP_P=1.0

# Search API Configuration
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_CX=your_google_search_engine_id_here
BING_SEARCH_API_KEY=your_bing_search_api_key_here
GITHUB_TOKEN=your_github_token_here
STACK_OVERFLOW_KEY=your_stackoverflow_key_here
NEWS_API_KEY=your_news_api_key_here

# Search Configuration
MAX_SEARCH_RESULTS=20
SEARCH_TIMEOUT=30

# Database Configuration
SQLITE_PATH=./data/automation.db
VECTOR_DB_PATH=./data/vector_db
VECTOR_DB_TYPE=chroma
MEDIA_PATH=./data/media

# Automation Configuration
BROWSER_TYPE=chromium
HEADLESS=true
BROWSER_TIMEOUT=30000
MAX_PARALLEL_AGENTS=5
MAX_PARALLEL_WORKFLOWS=3

# Browser Configuration
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
LOCALE=en-US
TIMEZONE=UTC

# Media Configuration
CAPTURE_SCREENSHOTS=true
CAPTURE_VIDEO=true
VIDEO_QUALITY=medium

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
AUDIT_LOG_PATH=./data/audit.log
AUDIT_RETENTION_DAYS=365
PII_DETECTION_ENABLED=true
PII_MASKING_ENABLED=true
RBAC_ENABLED=true

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
CORS_ORIGINS=["*"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging Configuration
LOG_FILE=./data/logs/automation.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5